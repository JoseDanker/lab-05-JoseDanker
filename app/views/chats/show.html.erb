<h1>Chat #<%= @chat.id %></h1>

<p><strong>Sender ID:</strong> <%= @chat.sender_id %></p>
<p><strong>Receiver ID:</strong> <%= @chat.receiver_id %></p>
<p><strong>Created At:</strong> <%= @chat.created_at %></p>
<p><strong>Updated At:</strong> <%= @chat.updated_at %></p>

<%= link_to 'Back to Chats', chats_path, class: "btn btn-primary" %>

<h1>Chat Details</h1>

<p>
  <strong>Sender:</strong> <%= @chat.sender.email %><br>
  <strong>Receiver:</strong> <%= @chat.receiver.email %>
</p>

<h2>Messages</h2>
<ul>
  <% @messages.each do |message| %>
    <li>
      <strong><%= message.user.email %>:</strong>
      <%= message.body %>
      <em>(<%= message.created_at.strftime("%Y-%m-%d %H:%M") %>)</em>
    </li>
  <% end %>
</ul>