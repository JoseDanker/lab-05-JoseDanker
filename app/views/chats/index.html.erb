<h1>All Chats</h1>



<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Sender ID</th>
      <th scope="col">Receiver ID</th>
      <th scope="col">Created At</th>
      <th scope="col">Updated At</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.id %></td>
        <td><%= "#{chat.sender.first_name} #{chat.sender.last_name}" %></td>
        <td><%= "#{chat.receiver.first_name} #{chat.receiver.last_name}" %></td>
        <td><%= chat.created_at %></td>
        <td><%= chat.updated_at %></td>
        <td><%= link_to 'Show', chat_path(chat), class: 'btn btn-primary btn-sm' %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Chat', new_chat_path, class: 'btn btn-primary' %>
