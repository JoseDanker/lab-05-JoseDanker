<h1>New Chat</h1>

<%= form_with(model: @chat) do |f| %>
  <% if @chat.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@chat.errors.count, "error") %> prohibited this chat from being saved:</h5>
      <ul>
        <% @chat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :sender_id, "Sender" %>
    <%= f.select :sender_id, User.all.collect { |u| [u.email, u.id] }, { prompt: "Select sender" }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :receiver_id, "Receiver" %>
    <%= f.select :receiver_id, User.all.collect { |u| [u.email, u.id] }, { prompt: "Select receiver" }, class: 'form-control' %>
  </div>

  <%= f.submit "Create Chat", class: "btn btn-primary mt-2" %>
<% end %>