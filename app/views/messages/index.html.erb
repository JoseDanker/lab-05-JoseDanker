<h1>All Messages</h1>


<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Chat ID</th>
      <th scope="col">User ID</th>
      <th scope="col">Body</th>
      <th scope="col">Created At</th>
      <th scope="col">Updated At</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= message.chat_id %></td>
        <td><%= message.user_id %></td>
        <td><%= message.body %></td>
        <td><%= message.created_at %></td>
        <td><%= message.updated_at %></td>
        <td>
          <%= link_to 'Show', message_path(message), class: 'btn btn-primary btn-sm' %>
          <% if can? :update, message %>
            <%= link_to "Edit", edit_message_path(message), class: 'btn btn-secondary btn-sm' %>
          <% end %>

          <% if can? :destroy, message %>
            <%= button_to "Delete", message_path(message), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Message', new_message_path, class: 'btn btn-primary' %>