<h1>Message #<%= @message.id %></h1>

<p><strong>Chat ID:</strong> <%= @message.chat_id %></p>
<p><strong>Sender ID:</strong> <%= @message.user_id %></p>
<p><strong>Body:</strong> <%= @message.body %></p>
<p><strong>Created At:</strong> <%= @message.created_at %></p>
<p><strong>Updated At:</strong> <%= @message.updated_at %></p>

<%= link_to 'Back to Messages', messages_path, class: "btn btn-primary" %>

<% if can? :edit, @message %>
  <%= link_to 'Edit Message', edit_message_path(@message), class: "btn btn-secondary" %>
<% end %>

<% if can? :destroy, @message %>
  <%= button_to 'Delete Message', message_path(@message), method: :delete, class: 'btn btn-danger' %>
<% end %>